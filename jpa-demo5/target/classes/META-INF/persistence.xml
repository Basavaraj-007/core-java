<?xml version="1.0" encoding="UTF-8"?><persistence xmlns="http://java.sun.com/xml/ns/persistence"  version="2.0">
     <persistence-unit name="Employe_xworkz" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
<!--  class tag definations mapping b/w object to tables or tables to object  -->
<!--  number dto/pojo class equal to number class tag -->

        <class>com.xworkz</class>
       

        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/xworkz"/>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="Xworkzodc@123"/>


<!-- hibernate.dialect is specific to database
dialect  is responsible for generating sql query specific to DATABASE. it is also converts java data types into database data types 
 -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect"/>
            <property name="hibernate.show_sql" value="true"/><!-- show sql command  -->
            <property name="hibernate.format_sql" value="true"/><!-- format the sql query -->
            <property name="hibernate.hbm2ddl.auto" value="update"/><!-- hiberanate mapping to data defination language --><!-- commands tells jpa/hibernate to create/update/drop-create etc tables into database -->
        </properties>
    </persistence-unit>  
      </persistence>